<h2 class="text-info mb-3">New category</h2>

<form action="/notes/new-category" method="POST" class="mb-4">
  <div class="mb-3">
    <label class="form-label text-light">Name</label>
    <input
      name="name"
      class="form-control"
      placeholder="ideas, familia, proyectos"
      required
    />
  </div>
  <div class="mb-3">
    <label class="form-label text-light">Description</label>
    <input name="description" class="form-control" placeholder="optional" />
  </div>
  <button class="btn btn-info">Save</button>
  <a href="/notes/all-notes" class="btn btn-outline-light ms-2">Return</a>
</form>

{{#if categories}}
  <h6 class="text-muted">Your categories:</h6>
  <ul class="list-unstyled">
    {{#each categories}}
      <li class="text-light">â€¢ {{this.name}}</li>
    {{/each}}
  </ul>
{{else}}
  <p class="text-muted">No category yet.</p>
{{/if}}